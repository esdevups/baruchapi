        <section class="container flex flex-col overflow-visible justify-center">
            <section class="p-5 flex justify-center sm:block">
                <!-- sorting section -->
                <form class="flex flex-col justify-center sm:justify-start sm:flex-row">
                    <select onchange="this.form.submit()" class="p-2" name="Filter" id="Filter">
                        @if (Model.Selecttag == "Price")
                        {
                            <option selected value="Price">مرتب سازی بر اساس قیمت</option>
                            <option value="Sale">مرتب سازی بر اساس فروش</option>
                        }
                        @if (Model.Selecttag == "Sale")
                        {
                            <option value="Price">مرتب سازی بر اساس قیمت</option>
                            <option selected value="Sale">مرتب سازی بر اساس فروش</option>
                        }


                    </select>
                    <div class="flex justify-center">
                        @if (Model.AsDs == "asc")
                        {
                            <div class="mx-1 my-0.5 sm:my-2">

                                <input onchange="this.form.submit()" checked class="hidden" name="type" value="asc" id="descending" type="radio"><label id="descending-label" class="p-1 border-4 block w-20 border-gray-300 rounded-sm hover:bg-gray-200 cursor-pointer" for="descending"><i class="zmdi zmdi-sort-amount-desc"></i> نزولی</label>
                            </div>
                            <div class="mx-1 my-0.5 sm:my-2">
                                <input onchange="this.form.submit()" class="hidden" name="type" id="ascending" type="radio"><label id="ascending-label" class="p-1 w-20 block border-4 border-gray-300 rounded-sm hover:bg-gray-200 cursor-pointer" for="ascending"><i class="zmdi zmdi-sort-amount-asc"></i> صعودی</label>

                            </div>
                        }
                        else
                        {
                            <div class="mx-1 my-0.5 sm:my-2">

                                <input onchange="this.form.submit()" class="hidden" name="type" value="asc" id="descending" type="radio"><label id="descending-label" class="p-1 border-4 block w-20 border-gray-300 rounded-sm hover:bg-gray-200 cursor-pointer" for="descending"><i class="zmdi zmdi-sort-amount-desc"></i> نزولی</label>
                            </div>
                            <div class="mx-1 my-0.5 sm:my-2">
                                <input checked onchange="this.form.submit()" class="hidden" name="type" id="ascending" type="radio"><label id="ascending-label" class="p-1 w-20 block border-4 border-gray-300 rounded-sm hover:bg-gray-200 cursor-pointer" for="ascending"><i class="zmdi zmdi-sort-amount-asc"></i> صعودی</label>

                            </div>
                        }

                    </div>
                </form>
            </section>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 justify-center xl:w-full">

                @foreach (var i in Model.PagingViewModel.products)
                {
                    if (i.Quantity > 0)
                    {
                        <div class="bg-white  border w-72 mb-3">
                            <a asp-page="product" asp-route-id="@i.Id">
                                <img class="w-full h-52" src="https://api.baruch.ir/images/@i.ImageName" alt="">
                            </a>
                            <a asp-page="product" asp-route-id="@i.Id" class="text-lg block font-yekanbold mb-10 mt-2 text-gray-700 px-2">@i.Title</a>
                            <p class="text-sm font-yekanbold text-gray-600 text-left mx-3">  @i.Price.ToString("#,0") ریال</p>
                            <div class="flex justify-center py-4">

                                <a class="bg-red-500 p-2 rounded-lg text-white"
                           asp-page="product" asp-route-id="@i.Id"><i class="zmdi zmdi-hc-lg zmdi-shopping-cart"></i></a>
                            </div>
                        </div>
                    }
                    else
                    {
                         <div class="bg-white  border w-72 mb-3">
                            <a asp-page="product" asp-route-id="@i.Id">
                                <img class="w-full h-52" src="https://api.baruch.ir/images/@i.ImageName" alt="">
                            </a>
                            <a asp-page="product" asp-route-id="@i.Id" class="text-lg block font-yekanbold mb-10 mt-2 text-gray-700 px-2">@i.Title</a>
                            <p class="text-sm font-yekanbold text-gray-600 text-left mx-3">  </p>
                            <div class="flex justify-center py-4">

                                <a class="bg-red-200 p-2 rounded-lg text-white"
                          asp-page="product" asp-route-id="@i.Id">ناموجود</a>
                            </div>
                        </div>
                    }

                }

                <div class="flex justify-center py-10">
                </div>
            </div>
            <div page-model="@Model.PagingViewModel.paging"
                 page-action="Products"
                 page-class="py-2 px-3 leading-tight text-red-500 bg-white border border-red-300 hover:bg-red-100 hover:text-gray-700"
                 page-class-normal="py-2 px-3 leading-tight text-red-500 bg-white border border-red-300 hover:bg-red-100 hover:text-gray-700"
                 page-class-selected="py-2 px-3 leading-tight text-gray-900 bg-red-300 border border-red-300 hover:bg-red-100 hover:text-gray-700"
                 class="rounded-lg flex border-collapse">
            </div>

        </section>

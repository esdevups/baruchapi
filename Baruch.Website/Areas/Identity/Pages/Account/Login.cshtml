@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

    <div class="flex justify-center">
 <main class="xl:w-1/3 lg:w-1/2 w-full my-40 bg-white p-5 flex flex-col justify-center rounded-lg shadow-lg mx-auto">
       <h1 class="text-center text-lg mb-5">ورود به سایت</h1>
            <form id="account" method="post" class="w-full flex justify-center flex-col" >
               
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                   <div class="flex items-center flex-col">
                    <input asp-for="Input.Email"class="border p-2 mb-5 focus:outline-none focus:border-gray-500 w-5/6 " placeholder="ایمیل یا نام کاربری" autocomplete="username" aria-required="true" />
                   
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
               
                
                    <input asp-for="Input.Password"  class="border w-5/6 p-2 focus:outline-none focus:border-gray-500" placeholder="رمز عبور"  autocomplete="current-password" aria-required="true" />
              
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <button id="login-submit" type="submit" class="border-2 border-red-500 text-red-500 p-2 w-5/6 mt-3 hover:bg-red-500 hover:text-white transition duration-100">ورود</button>
             
              </div>
                
             
              
            </form>

            </main>
            </div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
